{
  "name": "growl",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn run build:dev",
    "build:dev": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "debug:graphql": "cpx 'src/graphql/schemas/**/*.graphql' ./dist/graphql/schemas/ -w -v",
    "debug": "concurrently \"tsc -w\" \"yarn run debug:graphql\" \"nodemon --inspect ./dist/index.js\"",
    "-- Build -- ": "",
    "build": "yarn run build:config && yarn run build:graphql && tsc",
    "build:config": "cpx '.*.env' ./dist/ -v",
    "build:graphql": "cpx 'src/graphql/schemas/**/*.graphql' ./dist/graphql/schemas/ -v",
    "-- Tests --": "",
    "test": "jest --runInBand --passWithNoTests --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.4",
    "apollo-datasource-rest": "^3.5.2",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "helmet": "^5.0.2",
    "joi": "^17.6.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/nodemon": "^1.19.1",
    "concurrently": "^7.0.0",
    "cpx": "^1.5.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "bail": 1,
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testResultsProcessor": "jest-junit",
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "tsconfig": "tsconfig.test.json"
      }
    },
    "globalSetup": "./tests/common/global-setup.ts"    
  }
}
